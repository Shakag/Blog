// Menu
// --------------------------------------------------
.site-nav {
  font-size:1.3rem;
  transition: all .3s ease;
  flex-grow: 1;

  li:hover i{
    width: 100%;
    left: 0;
  }

  a{
    transition: all 3s ease;
  }
  
  a:hover{
    color:#000000;
  }

  +mobile() {
    padding: 10px 10px 0;
  }
}

.menu {
  padding: 0;

  .menu-item {
    margin: 0;

    +mobile() {
      margin-top: 5px;
    }

    a {
      border-radius: 2px;
      padding: 0 10px;
      transition-property: background;

      +mobile() {
        text-align: left;
      }
    }

    .badge {
      background: white;
      border-radius: 10px;
      color: $black-light;
      padding: 1px 4px;
      text-shadow: 1px 1px 0 rgba(0, 0, 0, .1);
    }
  }
}
