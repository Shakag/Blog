// Header
// --------------------------------------------------
.header-inner {
  align-items: center;
  display: flex;
  padding: 5px 0;

  +mobile() {
    display: block;
    padding: 10px 0;
  }
}

.site-meta {
  line-height: normal;

  .brand {
    padding: 2px 1px;

    +mobile() {
      display: block;
    }
  }

  .site-title {
    font-weight: 600;
    color:#444444;
    transition: all .3s ease;
  }

  .site-title:hover {
    color:#000000;
  }
}

.logo-line {
  //background: var(--brand-color);
  display: block;
  height: 2px;
  margin: 0 auto;
  width: 75%;

  +mobile() {
    display: none;
  }
}

.use-motion {
  .logo-line:first-of-type {
    transform: scaleX(0);
    transform-origin: left;
  }

  .logo-line:last-of-type {
    transform: scaleX(0);
    transform-origin: right;
  }
}

.site-subtitle {
  display: none;
}
